<androidx.cardview.widget.CardView style="@style/CardViewStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/color5"
    android:minHeight="150dp"
    android:layout_height="wrap_content"
    android:layout_width="150dp"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imvCoursePhoto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/android_developer" />

        <TextView
            android:id="@+id/tvCourseTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginHorizontal="@dimen/card_itemcourse_elevation"
            android:layout_gravity="center"
            android:text="@string/title_course"
            android:textColor="@color/whiteTextColor"
            android:textSize="16sp"

            android:textStyle="bold"
             />
    </LinearLayout>


</androidx.cardview.widget.CardView>