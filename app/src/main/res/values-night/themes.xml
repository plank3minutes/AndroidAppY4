<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/whiteTextColor</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/whiteTextColor</item>

        <!-- Background colors -->
        <item name="android:windowBackground">#1A1D2E</item>
        <item name="android:colorBackground">#1A1D2E</item>
        <item name="colorSurface">#252836</item>

        <!-- Text colors -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorSecondary">#9A9A9A</item>

        <!-- Progress bar colors -->
        <item name="colorAccent">#FF5722</item>

        <!-- Card colors -->
        <item name="cardBackgroundColor">#252836</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/bottomNavigationBackground</item>

        <!-- Others -->
        <item name="colorError">@color/red</item>

        <!-- Material components support -->
        <item name="android:colorAccent">@color/colorAccent</item>

        <!-- For vector icons tinting -->
        <item name="android:colorControlNormal">@color/bottomNavigationTextColor</item>

        <!-- Theme transition -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>
