<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/whiteTextColor</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/whiteTextColor</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/contentBodyColor</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/contentTextColor</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/bottomNavigationBackground</item>

        <!-- Others -->
        <item name="android:textColor">@color/whiteTextColor</item>

        <!-- Material components support -->
        <item name="android:colorBackground">@color/contentBodyColor</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/red</item>

        <!-- For vector icons tinting -->
        <item name="android:colorControlNormal">@color/bottomNavigationTextColor</item>

        <!-- Theme transition -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>
